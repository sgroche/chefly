<h1> New Link </h1> 

<%= form_for :link, url: links_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :old_link %><br>
    <%= f.text_area :old_link %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', links_path %>